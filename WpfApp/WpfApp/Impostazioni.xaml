        <Slider x:Name="Slider1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="84,80,0,0" Width="183" TickPlacement="BottomRight" Maximum="4" IsSnapToTickEnabled="True" ValueChanged="Slider1_ValueChanged"/>
